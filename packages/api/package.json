{
  "name": "@nlw3-happy/api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "dev:server": "ts-node-dev -r tsconfig-paths/register --transpile-only --ignore-watch node_modules src/server.ts --node-env=development",
    "start": "node dist/server.js",
    "build": "rimraf dist && tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist && npm run copy:templates",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "seed": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js seed",
    "copy:templates": "cpx \"./src/views/templates/*.hbs\" \"./dist/views/templates\" --clean"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.5",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mime": "^2.0.3",
    "@types/morgan": "^1.9.1",
    "@types/multer": "^1.4.4",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^8.3.0",
    "@types/yup": "^0.29.8",
    "cpx": "^1.5.0",
    "jest": "^25.3.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "aws-sdk": "^2.783.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "handlebars": "^4.7.6",
    "isomorphic-unfetch": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "mime": "^2.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.14",
    "pg": "^8.4.1",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.4.5",
    "tsyringe": "^4.3.0",
    "typeorm": "^0.2.28",
    "typeorm-seeding": "^1.6.1",
    "uuid": "^8.3.1",
    "yup": "^0.29.3"
  },
  "engines": {
    "node": "12.x"
  }
}
